<UserControl x:Class="qubic_miner_helper_server.connectedMachineDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:qubic_miner_helper_server"
             mc:Ignorable="d" Height="214.902" Width="706.358" Margin="0,0,0,3">
    <Grid HorizontalAlignment="Left" Width="696" Height="218" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Iter/s:" HorizontalAlignment="Left" Margin="7,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <Label Content="Machine Name:" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <Label Content="Errors found:" HorizontalAlignment="Left" Margin="9,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="ErrorsFoundTextBox" HorizontalAlignment="Left" Height="23" Margin="106,154,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="230"/>
        <TextBox IsReadOnly="True" x:Name="MachineNameTextBox" HorizontalAlignment="Left" Height="23" Margin="106,13,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="580" Grid.ColumnSpan="2" FontWeight="Bold"/>
        <TextBox IsReadOnly="True" x:Name="IterationsTextBox" Height="23" Margin="106,126,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" HorizontalAlignment="Left" Width="230"/>
        <TextBox IsReadOnly="True" x:Name="LastUpdateTextBox" HorizontalAlignment="Left" Height="23" Margin="106,183,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="230"/>
        <Label Content="Updated at:" HorizontalAlignment="Left" Margin="7,179,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588" Width="72"/>
        <Label Content="Worker count:" HorizontalAlignment="Left" Margin="7,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="WorkerCountTextBox" HorizontalAlignment="Left" Height="23" Margin="106,98,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="230"/>
        <Label Content="Command line:" HorizontalAlignment="Left" Margin="7,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="CommandLineTextBox" HorizontalAlignment="Left" Height="23" Margin="106,41,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="580" Grid.ColumnSpan="2"/>
        <Label Content="Qiner version:" HorizontalAlignment="Left" Margin="9,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="QinerVersionTextBox" HorizontalAlignment="Left" Height="23" Margin="106,69,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="230"/>
        <Label Content="Helper version:" HorizontalAlignment="Left" Margin="346,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="HelperVersionTextBox" HorizontalAlignment="Left" Height="23" Margin="496,69,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
        <Label Content="Last Time Error found:" HorizontalAlignment="Left" Margin="346,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588" Width="130"/>
        <TextBox IsReadOnly="True" x:Name="LastTimeErrorFoundTextBox" HorizontalAlignment="Left" Height="23" Margin="496,154,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
        <Label Content="Restarted workers count:" HorizontalAlignment="Left" Margin="346,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588" Width="145"/>
        <TextBox IsReadOnly="True" x:Name="OverallRestartTimesTextBox" HorizontalAlignment="Left" Height="23" Margin="496,183,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
        <Label Content="Current CPU Temps:" HorizontalAlignment="Left" Margin="346,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="CurrentCPUTempTextBox" HorizontalAlignment="Left" Height="23" Margin="496,97,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
        <Label Content="Current CPU Loads %:" HorizontalAlignment="Left" Margin="346,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <TextBox IsReadOnly="True" x:Name="CurrentCPULoadsTextBox" HorizontalAlignment="Left" Height="23" Margin="496,126,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
        <!--
        <Button x:Name="RestartWorkerButton" IsEnabled="false" Content="Restart all workers on machine" HorizontalAlignment="Left" Margin="106,219,0,0" VerticalAlignment="Top" Width="176" Click="RestartWorkerButton_Click"/>
        <Label Content="Remote Control:" IsEnabled="False" HorizontalAlignment="Left" Margin="6,216,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.103,-0.588"/>
        <Button x:Name="RestartWorkerButton_Copy" IsEnabled="false" Content="Reset found errors counter" HorizontalAlignment="Left" Margin="287,219,0,0" VerticalAlignment="Top" Width="159" Click="RestartWorkerButton_Click"/>
        -->

    </Grid>
</UserControl>
